-- Oyuncu butonlarƒ±nƒ± olu≈ütur
local function updatePlayerList()
    local playerButtonsFrame = teleportScroll:FindFirstChild("PlayerButtons")
    if playerButtonsFrame then
        playerButtonsFrame:Destroy()
    end
    
    playerButtonsFrame = Instance.new("Frame")
    playerButtonsFrame.Size = UDim2.new(1, -20, 0, 0)
    playerButtonsFrame.Position = UDim2.new(0, 10, 0, 170)
    playerButtonsFrame.BackgroundTransparency = 1
    playerButtonsFrame.Name = "PlayerButtons"
    playerButtonsFrame.AutomaticSize = Enum.AutomaticSize.Y
    playerButtonsFrame.Parent = teleportScroll
    
    local uiListLayout = Instance.new("UIListLayout")
    uiListLayout.Padding = UDim.new(0, 8)
    uiListLayout.Parent = playerButtonsFrame
    
    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= player then
            local playerButton = Instance.new("TextButton")
            playerButton.Size = UDim2.new(1, 0, 0, 45)
            playerButton.BackgroundColor3 = Colors.Secondary
            playerButton.TextColor3 = Colors.TextPrimary
            playerButton.Text = "üë§ " .. otherPlayer.Name
            playerButton.TextSize = 13
            playerButton.Font = Enum.Font.Gotham
            playerButton.AutoButtonColor = false
            playerButton.Parent = playerButtonsFrame
            
            local buttonCorner = Instance.new("UICorner")
            buttonCorner.CornerRadius = UDim.new(0, 8)
            buttonCorner.Parent = playerButton
            
            local buttonStroke = Instance.new("UIStroke")
            buttonStroke.Color = Colors.Border
            buttonStroke.Thickness = 1
            buttonStroke.Parent = playerButton
            
            -- Hover efekti
            playerButton.MouseEnter:Connect(function()
                TweenService:Create(playerButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = Color3.fromRGB(28, 33, 40)
                }):Play()
            end)
            
            playerButton.MouseLeave:Connect(function()
                TweenService:Create(playerButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = Colors.Secondary
                }):Play()
            end)
            
            playerButton.MouseButton1Click:Connect(function()
                teleportToPlayer(otherPlayer.Name)
            end)
        end
    end
end

-- Oyuncu listesini g√ºncelle
updatePlayerList()
Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)

