-- Modern Admin Menu - Fixed Version
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TS = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Modern UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ModernAdminMenu"
screenGui.Parent = game.CoreGui

-- Ana Men√º
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 550)
mainFrame.Position = UDim2.new(0, 50, 0, 50)
mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- K√∂≈üe yuvarlaklƒ±ƒüƒ±
local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 15)
mainCorner.Parent = mainFrame

-- G√∂lge efekti
local mainShadow = Instance.new("UIStroke")
mainShadow.Color = Color3.fromRGB(0, 150, 255)
mainShadow.Thickness = 2
mainShadow.Parent = mainFrame

-- Ba≈ülƒ±k (S√ºr√ºkleme alanƒ±)
local titleFrame = Instance.new("Frame")
titleFrame.Size = UDim2.new(1, 0, 0, 60)
titleFrame.Position = UDim2.new(0, 0, 0, 0)
titleFrame.BackgroundColor3 = Color3.fromRGB(0, 100, 200)
titleFrame.BorderSizePixel = 0
titleFrame.Parent = mainFrame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 15)
titleCorner.Parent = titleFrame

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -80, 1, 0)
titleLabel.Position = UDim2.new(0, 10, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.Text = "‚ö° MODERN ADMIN MENU ‚ö°"
titleLabel.TextSize = 18
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleFrame

local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 15)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Text = "X"
closeButton.TextSize = 16
closeButton.Font = Enum.Font.GothamBold
closeButton.Parent = titleFrame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(1, 0)
closeCorner.Parent = closeButton

-- Arama kutusu
local searchBox = Instance.new("TextBox")
searchBox.Size = UDim2.new(1, -20, 0, 40)
searchBox.Position = UDim2.new(0, 10, 0, 70)
searchBox.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
searchBox.TextColor3 = Color3.new(1, 1, 1)
searchBox.PlaceholderText = "üîç √ñzellik ara..."
searchBox.Text = ""
searchBox.TextSize = 14
searchBox.Font = Enum.Font.Gotham
searchBox.Parent = mainFrame

local searchCorner = Instance.new("UICorner")
searchCorner.CornerRadius = UDim.new(0, 8)
searchCorner.Parent = searchBox

-- ƒ∞√ßerik alanƒ±
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, 0, 1, -130)
contentFrame.Position = UDim2.new(0, 0, 0, 120)
contentFrame.BackgroundTransparency = 1
contentFrame.Parent = mainFrame

-- Scroll frame
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, 0, 1, 0)
scrollFrame.Position = UDim2.new(0, 0, 0, 0)
scrollFrame.BackgroundTransparency = 1
scrollFrame.ScrollBarThickness = 6
scrollFrame.ScrollBarImageColor3 = Color3.fromRGB(0, 150, 255)
scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 650)
scrollFrame.Parent = contentFrame

-- Butonlarƒ± olu≈ütur
local buttons = {
    {"üöÄ U√ßma Modu", Color3.fromRGB(255, 150, 0), "Fly modunu aktif eder (WASD + Space/Shift)", 10, "fly"},
    {"üëª NoClip Modu", Color3.fromRGB(255, 50, 100), "Duvarlardan ge√ßmeyi saƒülar", 80, "noclip"},
    {"üõ°Ô∏è God Mode", Color3.fromRGB(0, 200, 100), "√ñl√ºms√ºzl√ºk ve fall damage korumasƒ±", 150, "god"},
    {"‚ö° Hƒ±z Artƒ±r", Color3.fromRGB(0, 150, 255), "Y√ºr√ºme hƒ±zƒ±nƒ± 50 yapar", 220, "speed"},
    {"üéØ ESP", Color3.fromRGB(200, 0, 200), "Oyuncularƒ± i≈üaretler", 290, "esp"},
    {"üîß Tool Ver", Color3.fromRGB(255, 200, 0), "Admin tool'larƒ± verir", 360, "tools"},
    {"üëÅÔ∏è G√∂r√ºnmezlik", Color3.fromRGB(100, 100, 150), "Karakteri g√∂r√ºnmez yapar", 430, "invis"},
    {"üåÄ Teleport", Color3.fromRGB(0, 180, 180), "Mouse tƒ±klanan yere ƒ±≈üƒ±nlan", 500, "tp"},
    {"üßπ Temizlik", Color3.fromRGB(150, 150, 150), "Oyunu temizler", 570, "clean"}
}

local createdButtons = {}
local buttonStates = {
    fly = false,
    noclip = false,
    god = false,
    esp = false
}

for i, buttonData in ipairs(buttons) do
    local buttonFrame = Instance.new("Frame")
    buttonFrame.Size = UDim2.new(1, -20, 0, 60)
    buttonFrame.Position = UDim2.new(0, 10, 0, buttonData[4])
    buttonFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
    buttonFrame.BorderSizePixel = 0
    buttonFrame.Parent = scrollFrame
    buttonFrame.Name = buttonData[5] -- Arama i√ßin isim
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 10)
    buttonCorner.Parent = buttonFrame
    
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 1, 0)
    button.Position = UDim2.new(0, 0, 0, 0)
    button.BackgroundColor3 = buttonData[2]
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Text = buttonData[1]
    button.TextSize = 14
    button.Font = Enum.Font.GothamBold
    button.Parent = buttonFrame
    
    local buttonCorner2 = Instance.new("UICorner")
    buttonCorner2.CornerRadius = UDim.new(0, 10)
    buttonCorner2.Parent = button
    
    local descLabel = Instance.new("TextLabel")
    descLabel.Size = UDim2.new(1, -10, 0, 20)
    descLabel.Position = UDim2.new(0, 5, 1, -25)
    descLabel.BackgroundTransparency = 1
    descLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    descLabel.Text = buttonData[3]
    descLabel.TextSize = 10
    descLabel.Font = Enum.Font.Gotham
    descLabel.Parent = buttonFrame
    
    table.insert(createdButtons, {button = button, frame = buttonFrame, id = buttonData[5]})
end

-- Deƒüi≈ükenler
local flying = false
local noclip = false
local bodyVelocity
local bodyGyro

-- Men√º s√ºr√ºkleme
local dragging = false
local dragInput, dragStart, startPos

titleFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

titleFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Arama fonksiyonu
searchBox:GetPropertyChangedSignal("Text"):Connect(function()
    local searchText = searchBox.Text:lower()
    
    for _, btnData in pairs(createdButtons) do
        local buttonText = btnData.button.Text:lower()
        local shouldShow = searchText == "" or buttonText:find(searchText) or btnData.id:find(searchText)
        
        btnData.frame.Visible = shouldShow
    end
end)

-- Kapat butonu
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Fly Fonksiyonu (D√ºzeltilmi≈ü)
for _, btnData in pairs(createdButtons) do
    if btnData.id == "fly" then
        btnData.button.MouseButton1Click:Connect(function()
            flying = not flying
            
            if flying then
                btnData.button.Text = "üöÄ U√ßma: A√áIK"
                btnData.button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
                
                local character = player.Character
                if character then
                    local humanoid = character:FindFirstChildOfClass("Humanoid")
                    local root = character:FindFirstChild("HumanoidRootPart")
                    
                    if humanoid and root then
                        -- PlatformStand'ƒ± kapat (fall damage'i engelle)
                        humanoid.PlatformStand = false
                        
                        bodyVelocity = Instance.new("BodyVelocity")
                        bodyVelocity.Velocity = Vector3.new(0, 0, 0)
                        bodyVelocity.MaxForce = Vector3.new(40000, 40000, 40000)
                        bodyVelocity.Parent = root
                        
                        bodyGyro = Instance.new("BodyGyro")
                        bodyGyro.MaxTorque = Vector3.new(50000, 50000, 50000) -- T√ºm eksenlerde d√∂n√º≈ü
                        bodyGyro.P = 10000
                        bodyGyro.D = 1000
                        bodyGyro.CFrame = root.CFrame
                        bodyGyro.Parent = root
                    end
                end
            else
                btnData.button.Text = "üöÄ U√ßma Modu"
                btnData.button.BackgroundColor3 = Color3.fromRGB(255, 150, 0)
                
                local character = player.Character
                if character then
                    local humanoid = character:FindFirstChildOfClass("Humanoid")
                    if humanoid then
                        humanoid.PlatformStand = false
                    end
                end
                
                if bodyVelocity then
                    bodyVelocity:Destroy()
                    bodyVelocity = nil
                end
                if bodyGyro then
                    bodyGyro:Destroy()
                    bodyGyro = nil
                end
            end
        end)
    end
    
    -- NoClip
    if btnData.id == "noclip" then
        btnData.button.MouseButton1Click:Connect(function()
            noclip = not noclip
            
            if noclip then
                btnData.button.Text = "üëª NoClip: A√áIK"
                btnData.button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
            else
                btnData.button.Text = "üëª NoClip Modu"
                btnData.button.BackgroundColor3 = Color3.fromRGB(255, 50, 100)
            end
        end)
    end
    
    -- God Mode
    if btnData.id == "god" then
        btnData.button.MouseButton1Click:Connect(function()
            buttonStates.god = not buttonStates.god
            
            local character = player.Character
            if character then
                local humanoid = character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    if buttonStates.god then
                        btnData.button.Text = "üõ°Ô∏è God: A√áIK"
                        btnData.button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
                        humanoid.MaxHealth = math.huge
                        humanoid.Health = math.huge
                    else
                        btnData.button.Text = "üõ°Ô∏è God Mode"
                        btnData.button.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
                        humanoid.MaxHealth = 100
                        humanoid.Health = 100
                    end
                end
            end
        end)
    end
    
    -- Hƒ±z
    if btnData.id == "speed" then
        btnData.button.MouseButton1Click:Connect(function()
            local character = player.Character
            if character then
                local humanoid = character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.WalkSpeed = 50
                end
            end
        end)
    end
    
    -- ESP
    if btnData.id == "esp" then
        btnData.button.MouseButton1Click:Connect(function()
            buttonStates.esp = not buttonStates.esp
            
            if buttonStates.esp then
                btnData.button.Text = "üéØ ESP: A√áIK"
                btnData.button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
                
                for _, otherPlayer in pairs(Players:GetPlayers()) do
                    if otherPlayer ~= player and otherPlayer.Character then
                        local highlight = Instance.new("Highlight")
                        highlight.FillColor = Color3.new(1, 0, 0)
                        highlight.OutlineColor = Color3.new(1, 1, 0)
                        highlight.FillTransparency = 0.5
                        highlight.OutlineTransparency = 0
                        highlight.Parent = otherPlayer.Character
                    end
                end
            else
                btnData.button.Text = "üéØ ESP"
                btnData.button.BackgroundColor3 = Color3.fromRGB(200, 0, 200)
                
                for _, otherPlayer in pairs(Players:GetPlayers()) do
                    if otherPlayer.Character then
                        local highlight = otherPlayer.Character:FindFirstChild("Highlight")
                        if highlight then
                            highlight:Destroy()
                        end
                    end
                end
            end
        end)
    end
    
    -- Tool Ver
    if btnData.id == "tools" then
        btnData.button.MouseButton1Click:Connect(function()
            for i = 1, 3 do
                local tool = Instance.new("Tool")
                tool.Name = "Admin Sword " .. i
                tool.Parent = player.Backpack
            end
        end)
    end
    
    -- Teleport
    if btnData.id == "tp" then
        btnData.button.MouseButton1Click:Connect(function()
            local character = player.Character
            if character then
                local root = character:FindFirstChild("HumanoidRootPart")
                if root then
                    local mouse = player:GetMouse()
                    root.CFrame = CFrame.new(mouse.Hit.Position + Vector3.new(0, 5, 0))
                end
            end
        end)
    end
end

-- Fly Kontrolleri (D√ºzeltilmi≈ü)
RunService.Heartbeat:Connect(function()
    -- Fly kontrol√º
    if flying and bodyVelocity and bodyGyro then
        local character = player.Character
        if character then
            local root = character:FindFirstChild("HumanoidRootPart")
            if root then
                -- Kameranƒ±n y√∂n√ºn√º takip et
                local cam = workspace.CurrentCamera
                bodyGyro.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
                
                local direction = Vector3.new(0, 0, 0)
                local speed = 100
                
                if UIS:IsKeyDown(Enum.KeyCode.W) then
                    direction = direction + cam.CFrame.LookVector
                end
                if UIS:IsKeyDown(Enum.KeyCode.S) then
                    direction = direction - cam.CFrame.LookVector
                end
                if UIS:IsKeyDown(Enum.KeyCode.A) then
                    direction = direction - cam.CFrame.RightVector
                end
                if UIS:IsKeyDown(Enum.KeyCode.D) then
                    direction = direction + cam.CFrame.RightVector
                end
                if UIS:IsKeyDown(Enum.KeyCode.Space) then
                    direction = direction + Vector3.new(0, 1, 0)
                end
                if UIS:IsKeyDown(Enum.KeyCode.LeftShift) then
                    direction = direction + Vector3.new(0, -1, 0)
                end
                
                if direction.Magnitude > 0 then
                    direction = direction.Unit * speed
                else
                    direction = Vector3.new(0, 0, 0)
                end
                
                bodyVelocity.Velocity = direction
            end
        end
    end
    
    -- Noclip kontrol√º
    if noclip then
        local character = player.Character
        if character then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end
    
    -- Fall damage korumasƒ±
    if flying or buttonStates.god then
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
                humanoid:SetStateEnabled(Enum.HumanoidStateType.Ragdoll, false)
            end
        end
    end
end)

-- Karakter deƒüi≈üimlerini handle et
player.CharacterAdded:Connect(function(character)
    wait(1) -- Karakterin y√ºklenmesini bekle
    
    -- U√ßma modunu resetle
    if flying then
        flying = false
        for _, btnData in pairs(createdButtons) do
            if btnData.id == "fly" then
                btnData.button.Text = "üöÄ U√ßma Modu"
                btnData.button.BackgroundColor3 = Color3.fromRGB(255, 150, 0)
            end
        end
    end
    
    -- God mode'u yeniden uygula
    if buttonStates.god then
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            humanoid.MaxHealth = math.huge
            humanoid.Health = math.huge
        end
    end
end)

print("üéÆ Modern Admin Menu y√ºklendi! Men√ºy√º s√ºr√ºkleyerek ta≈üƒ±yabilirsin.")
