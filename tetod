-- Uçma menüsü
local ucmak = false

-- Menüyü oluştur
function menuOlustur()
    print("╔══════════════════════════╗")
    print("║        🚀 UÇMA MENÜSÜ   ║")
    print("╠══════════════════════════╣")
    print("║ 1. Uçmayı Aç            ║")
    print("║ 2. Uçmayı Kapat         ║")
    print("║ 3. Menüyü Kapat         ║")
    print("╚══════════════════════════╝")
end

-- Uçma fonksiyonu
function uc()
    while ucmak do
        print("🚀 Uçuyorsun...")
        os.execute("sleep 1") -- 1 saniye bekle
    end
end

-- Başlangıç mesajı
print("\n🎮 MENÜ AÇILIYOR...")
print("📜 Script başlatıldı!")
print("👆 Aşağıdaki menüden seçim yapabilirsin\n")

-- Ana program
function main()
    menuOlustur()
    
    while true do
        io.write("🎯 Seçim yap (1-3): ")
        local secim = io.read()
        
        if secim == "1" then
            if not ucmak then
                ucmak = true
                print("✅ Uçma aktif!")
                -- Uçma işlemini başlat
                local thread = coroutine.create(uc)
                coroutine.resume(thread)
            else
                print("⚠️ Zaten uçuyorsun!")
            end
            
        elseif secim == "2" then
            if ucmak then
                ucmak = false
                print("❌ Uçma durduruldu!")
            else
                print("⚠️ Zaten uçmuyorsun!")
            end
            
        elseif secim == "3" then
            print("👋 Menü kapatılıyor...")
            ucmak = false
            break
            
        else
            print("❌ Geçersiz seçim! 1-3 arası bir sayı gir.")
        end
        
        print() -- Boşluk bırak
    end
end

-- Programı başlat
main()
