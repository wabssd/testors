local tabButtons = {}
local currentTab = "home"

-- Deƒüi≈ükenler
local flying = false
local noclip = false
local godmode = false
local bodyVelocity
local bodyGyro
local checkboxes = {}

-- Fonksiyonlar
function createTabFrame(tabId)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.Position = UDim2.new(0, 0, 0, 0)
    frame.BackgroundTransparency = 1
    frame.Visible = false
    frame.Parent = contentFrame
    frame.Name = tabId
    return frame
end

function createScrollFrame(parent)
    local scroll = Instance.new("ScrollingFrame")
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.Position = UDim2.new(0, 0, 0, 0)
    scroll.BackgroundTransparency = 1
    scroll.ScrollBarThickness = 6
    scroll.ScrollBarImageColor3 = Color3.fromRGB(48, 54, 61)
    scroll.CanvasSize = UDim2.new(0, 0, 0, 800)
    scroll.Parent = parent
    return scroll
end

function createCheckbox(name, desc, recommended, yPos, parent, category)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -20, 0, 70)
    frame.Position = UDim2.new(0, 10, 0, yPos)
    frame.BackgroundColor3 = Color3.fromRGB(22, 27, 34)
    frame.BorderSizePixel = 0
    frame.Parent = parent
    frame.Name = name
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = frame
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(48, 54, 61)
    stroke.Thickness = 1
    stroke.Parent = frame
    
    -- Checkbox
    local checkbox = Instance.new("TextButton")
    checkbox.Size = UDim2.new(0, 20, 0, 20)
    checkbox.Position = UDim2.new(0, 15, 0, 15)
    checkbox.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
    checkbox.Text = ""
    checkbox.Parent = frame
    
    local checkboxCorner = Instance.new("UICorner")
    checkboxCorner.CornerRadius = UDim.new(0, 4)
    checkboxCorner.Parent = checkbox
    
    local checkboxStroke = Instance.new("UIStroke")
    checkboxStroke.Color = Color3.fromRGB(48, 54, 61)
    checkboxStroke.Thickness = 2
    checkboxStroke.Parent = checkbox
    
    -- Check i≈üareti
    local checkMark = Instance.new("TextLabel")
    checkMark.Size = UDim2.new(1, 0, 1, 0)
    checkMark.Position = UDim2.new(0, 0, 0, 0)
    checkMark.BackgroundTransparency = 1
    checkMark.Text = "‚úì"
    checkMark.TextColor3 = Color3.fromRGB(0, 200, 0)
    checkMark.TextSize = 14
    checkMark.Font = Enum.Font.GothamBold
    checkMark.Visible = false
    checkMark.Parent = checkbox
    
    -- Ba≈ülƒ±k
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, -50, 0, 20)
    titleLabel.Position = UDim2.new(0, 45, 0, 12)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextColor3 = Color3.new(1, 1, 1)
    titleLabel.Text = name
    titleLabel.TextSize = 14
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Parent = frame
    
    -- Recommended badge
    if recommended then
        local recommendedLabel = Instance.new("TextLabel")
        recommendedLabel.Size = UDim2.new(0, 80, 0, 18)
        recommendedLabel.Position = UDim2.new(0, 45, 0, 35)
        recommendedLabel.BackgroundColor3 = Color3.fromRGB(35, 134, 54)
        recommendedLabel.TextColor3 = Color3.new(1, 1, 1)
        recommendedLabel.Text = "Recommended"
        recommendedLabel.TextSize = 10
        recommendedLabel.Font = Enum.Font.GothamBold
        recommendedLabel.Parent = frame
        
        local recommendedCorner = Instance.new("UICorner")
        recommendedCorner.CornerRadius = UDim.new(0, 4)
        recommendedCorner.Parent = recommendedLabel
    end
    
    -- A√ßƒ±klama
    local descLabel = Instance.new("TextLabel")
    descLabel.Size = UDim2.new(1, -50, 0, 30)
    descLabel.Position = UDim2.new(0, 45, 0, 35)
    descLabel.BackgroundTransparency = 1
    descLabel.TextColor3 = Color3.fromRGB(139, 148, 158)
    descLabel.Text = desc
    descLabel.TextSize = 11
    descLabel.Font = Enum.Font.Gotham
    descLabel.TextXAlignment = Enum.TextXAlignment.Left
    descLabel.TextYAlignment = Enum.TextYAlignment.Top
    descLabel.Parent = frame
    
    if recommended then
        descLabel.Position = UDim2.new(0, 45, 0, 55)
    end
    
    -- Checkbox'ƒ± kaydet
    checkboxes[name] = {
        button = checkbox,
        check = checkMark,
        enabled = false,
        category = category,
        name = name
    }
    
    -- Click event
    checkbox.MouseButton1Click:Connect(function()
        toggleCheckbox(name)
    end)
    
    return frame
end

function toggleCheckbox(name)
    local data = checkboxes[name]
    if not data then return end
    
    data.enabled = not data.enabled
    data.check.Visible = data.enabled
    
    if data.enabled then
        data.button.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
        activateFeature(name)
    else
        data.button.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
        deactivateFeature(name)
    end
end

function activateFeature(name)
    if name == "üöÄ Fly Mode" then
        flying = true
        local character = player.Character
        if character then
            local root = character:FindFirstChild("HumanoidRootPart")
            if root then
                bodyVelocity = Instance.new("BodyVelocity")
                bodyVelocity.Velocity = Vector3.new(0, 0, 0)
                bodyVelocity.MaxForce = Vector3.new(40000, 40000, 40000)
                bodyVelocity.Parent = root
                
                bodyGyro = Instance.new("BodyGyro")
                bodyGyro.MaxTorque = Vector3.new(50000, 50000, 50000)
                bodyGyro.P = 10000
                bodyGyro.D = 1000
                bodyGyro.CFrame = root.CFrame
                bodyGyro.Parent = root
            end
        end
    elseif name == "üëª NoClip Mode" then
        noclip = true
    elseif name == "üõ°Ô∏è God Mode" then
        godmode = true
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.MaxHealth = math.huge
                humanoid.Health = math.huge
            end
        end
    elseif name == "‚ö° Speed Boost" then
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = 50
            end
        end
    elseif name == "üåÄ Teleport" then
        local character = player.Character
        if character then
            local root = character:FindFirstChild("HumanoidRootPart")
            if root then
                local mouse = player:GetMouse()
                root.CFrame = CFrame.new(mouse.Hit.Position + Vector3.new(0, 5, 0))
            end
        end
    elseif name == "üîß Admin Tools" then
        for i = 1, 3 do
            local tool = Instance.new("Tool")
            tool.Name = "Admin Tool " .. i
            tool.Parent = player.Backpack
        end
    elseif name == "üéØ Player ESP" then
        for _, otherPlayer in pairs(Players:GetPlayers()) do
            if otherPlayer ~= player and otherPlayer.Character then
                local highlight = Instance.new("Highlight")
                highlight.FillColor = Color3.new(1, 0, 0)
                highlight.OutlineColor = Color3.new(1, 1, 0)
                highlight.FillTransparency = 0.5
                highlight.OutlineTransparency = 0
                highlight.Parent = otherPlayer.Character
            end
        end
    elseif name == "üëÅÔ∏è Invisibility" then
        local character = player.Character
        if character then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Transparency = 0.8
                end
            end
        end
    end
end

function deactivateFeature(name)
    if name == "üöÄ Fly Mode" then
        flying = false
        if bodyVelocity then bodyVelocity:Destroy() bodyVelocity = nil end
        if bodyGyro then bodyGyro:Destroy() bodyGyro = nil end
    elseif name == "üëª NoClip Mode" then
        noclip = false
    elseif name == "üõ°Ô∏è God Mode" then
        godmode = false
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.MaxHealth = 100
                humanoid.Health = 100
            end
        end
    elseif name == "‚ö° Speed Boost" then
        local character = player.Character
        if character then
            local humanoid = character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                humanoid.WalkSpeed = 16
            end
        end
    elseif name == "üéØ Player ESP" then
        for _, otherPlayer in pairs(Players:GetPlayers()) do
            if otherPlayer.Character then
                local highlight = otherPlayer.Character:FindFirstChild("Highlight")
                if highlight then
                    highlight:Destroy()
                end
            end
        end
    elseif name == "üëÅÔ∏è Invisibility" then
        local character = player.Character
        if character then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.Transparency = 0
                end
            end
        end
    end
end

function switchTab(tabId)
    currentTab = tabId
    
    -- T√ºm sekmeleri gizle
    for _, tab in ipairs(tabs) do
        local frame = contentFrame:FindFirstChild(tab.id)
        if frame then
            frame.Visible = false
        end
        if tabButtons[tab.id] then
            tabButtons[tab.id].BackgroundColor3 = Color3.fromRGB(33, 38, 45)
            tabButtons[tab.id].TextColor3 = Color3.fromRGB(139, 148, 158)
        end
    end
    
    -- Aktif sekme
    local activeFrame = contentFrame:FindFirstChild(tabId)
    if activeFrame then
        activeFrame.Visible = true
    end
    if tabButtons[tabId] then
        tabButtons[tabId].BackgroundColor3 = Color3.fromRGB(0, 100, 200)
        tabButtons[tabId].TextColor3 = Color3.new(1, 1, 1)
    end
end

-- Sekmeleri olu≈ütur
for i, tab in ipairs(tabs) do
    local tabButton = Instance.new("TextButton")
    tabButton.Size = UDim2.new(1, -10, 0, 50)
    tabButton.Position = UDim2.new(0, 5, 0, 10 + (i * 55))
    tabButton.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
    tabButton.TextColor3 = Color3.fromRGB(139, 148, 158)
    tabButton.Text = tab.name
    tabButton.TextSize = 14
    tabButton.Font = Enum.Font.Gotham
    tabButton.Parent = tabFrame
    
    local tabCorner = Instance.new("UICorner")
    tabCorner.CornerRadius = UDim.new(0, 8)
    tabCorner.Parent = tabButton
    
    tabButtons[tab.id] = tabButton
    
    tabButton.MouseButton1Click:Connect(function()
        switchTab(tab.id)
    end)
end

