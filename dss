-- Hız Menüsü Script'i (LocalScript olarak StarterPlayerScripts'e koy)

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- GUI oluştur
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local SpeedLabel = Instance.new("TextLabel")
local SpeedBox = Instance.new("TextBox")
local ApplyButton = Instance.new("TextButton")

ScreenGui.Parent = player.PlayerGui
ScreenGui.Name = "SpeedMenu"

Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)

SpeedLabel.Parent = Frame
SpeedLabel.Size = UDim2.new(0, 180, 0, 30)
SpeedLabel.Position = UDim2.new(0, 10, 0, 10)
SpeedLabel.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
SpeedLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedLabel.Text = "Hız Değeri:"
SpeedLabel.TextScaled = true

SpeedBox.Parent = Frame
SpeedBox.Size = UDim2.new(0, 180, 0, 30)
SpeedBox.Position = UDim2.new(0, 10, 0, 50)
SpeedBox.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
SpeedBox.TextColor3 = Color3.fromRGB(0, 0, 0)
SpeedBox.Text = "16" -- Varsayılan hız
SpeedBox.PlaceholderText = "Hız değeri girin"

ApplyButton.Parent = Frame
ApplyButton.Size = UDim2.new(0, 180, 0, 40)
ApplyButton.Position = UDim2.new(0, 10, 0, 90)
ApplyButton.BackgroundColor3 = Color3.fromRGB(0, 100, 200)
ApplyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ApplyButton.Text = "Hızı Ayarla"
ApplyButton.TextScaled = true

-- Hız ayarlama fonksiyonu
local function setSpeed(speedValue)
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.WalkSpeed = speedValue
        print("Hız " .. speedValue .. " olarak ayarlandı!")
    else
        print("Humanoid bulunamadı!")
    end
end

-- Buton tıklama olayı
ApplyButton.MouseButton1Click:Connect(function()
    local speed = tonumber(SpeedBox.Text)
    if speed and speed > 0 then
        setSpeed(speed)
    else
        SpeedBox.Text = "Geçersiz değer!"
        wait(1)
        SpeedBox.Text = "16"
    end
end)

-- Karakter değiştiğinde
player.CharacterAdded:Connect(function(newChar)
    character = newChar
    wait(1) -- Humanoid'in yüklenmesini bekle
    local speed = tonumber(SpeedBox.Text) or 16
    setSpeed(speed)
end)
