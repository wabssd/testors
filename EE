-- Deƒüi≈ükenler
local flying = false
local noclip = false
local godmode = false
local bodyVelocity
local bodyGyro

-- Men√º s√ºr√ºkleme
local dragging = false
local dragInput, dragStart, startPos

titleFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

titleFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Arama fonksiyonu
searchBox:GetPropertyChangedSignal("Text"):Connect(function()
    local searchText = searchBox.Text:lower()
    
    for _, settingFrame in pairs(scrollFrame:GetChildren()) do
        if settingFrame:IsA("Frame") and settingFrame.Name then
            local shouldShow = searchText == "" or settingFrame.Name:lower():find(searchText)
            settingFrame.Visible = shouldShow
        end
    end
end)

-- Kapat butonu
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Checkbox i≈ülevleri
checkboxes["üöÄ Fly Mode"].button.MouseButton1Click:Connect(function()
    local data = checkboxes["üöÄ Fly Mode"]
    data.enabled = not data.enabled
    data.check.Visible = data.enabled
    flying = data.enabled
    
    if flying then
        data.button.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
        
        local character = player.Character
        if character then
            local root = character:FindFirstChild("HumanoidRootPart")
            if root then
                bodyVelocity = Instance.new("BodyVelocity")
                bodyVelocity.Velocity = Vector3.new(0, 0, 0)
                bodyVelocity.MaxForce = Vector3.new(40000, 40000, 40000)
                bodyVelocity.Parent = root
                
                bodyGyro = Instance.new("BodyGyro")
                bodyGyro.MaxTorque = Vector3.new(50000, 50000, 50000)
                bodyGyro.P = 10000
                bodyGyro.D = 1000
                bodyGyro.CFrame = root.CFrame
                bodyGyro.Parent = root
            end
        end
    else
        data.button.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
        
        if bodyVelocity then
            bodyVelocity:Destroy()
            bodyVelocity = nil
        end
        if bodyGyro then
            bodyGyro:Destroy()
            bodyGyro = nil
        end
    end
end)

checkboxes["üëª NoClip Mode"].button.MouseButton1Click:Connect(function()
    local data = checkboxes["üëª NoClip Mode"]
    data.enabled = not data.enabled
    data.check.Visible = data.enabled
    noclip = data.enabled
    
    if data.enabled then
        data.button.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
    else
        data.button.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
    end
end)

checkboxes["üõ°Ô∏è God Mode"].button.MouseButton1Click:Connect(function()
    local data = checkboxes["üõ°Ô∏è God Mode"]
    data.enabled = not data.enabled
    data.check.Visible = data.enabled
    godmode = data.enabled
    
    local character = player.Character
    if character then
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            if godmode then
                data.button.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
                humanoid.MaxHealth = math.huge
                humanoid.Health = math.huge
            else
                data.button.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
                humanoid.MaxHealth = 100
                humanoid.Health = 100
            end
        end
    end
end)

checkboxes["‚ö° Speed Boost"].button.MouseButton1Click:Connect(function()
    local data = checkboxes["‚ö° Speed Boost"]
    data.enabled = not data.enabled
    data.check.Visible = data.enabled
    
    local character = player.Character
    if character then
        local humanoid = character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            if data.enabled then
                data.button.BackgroundColor3 = Color3.fromRGB(0, 100, 0)
                humanoid.WalkSpeed = 50
            else
                data.button.BackgroundColor3 = Color3.fromRGB(33, 38, 45)
                humanoid.WalkSpeed = 16
            end
        end
    end
end)

-- Fly kontrolleri
RunService.Heartbeat:Connect(function()
    if flying and bodyVelocity and bodyGyro then
        local character = player.Character
        if character then
            local root = character:FindFirstChild("HumanoidRootPart")
            local cam = workspace.CurrentCamera
            if root and cam then
                bodyGyro.CFrame = CFrame.new(root.Position, root.Position + cam.CFrame.LookVector)
                
                local direction = Vector3.new(0, 0, 0)
                local speed = 100
                
                if UIS:IsKeyDown(Enum.KeyCode.W) then direction = direction + cam.CFrame.LookVector end
                if UIS:IsKeyDown(Enum.KeyCode.S) then direction = direction - cam.CFrame.LookVector end
                if UIS:IsKeyDown(Enum.KeyCode.A) then direction = direction - cam.CFrame.RightVector end
                if UIS:IsKeyDown(Enum.KeyCode.D) then direction = direction + cam.CFrame.RightVector end
                if UIS:IsKeyDown(Enum.KeyCode.Space) then direction = direction + Vector3.new(0, 1, 0) end
                if UIS:IsKeyDown(Enum.KeyCode.LeftShift) then direction = direction + Vector3.new(0, -1, 0) end
                
                if direction.Magnitude > 0 then
                    direction = direction.Unit * speed
                end
                
                bodyVelocity.Velocity = direction
            end
        end
    end
    
    if noclip then
        local character = player.Character
        if character then
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = false
                end
            end
        end
    end
end)

print("üéÆ VTRL Style Admin Menu y√ºklendi! Resimdeki gibi modern checkbox men√º hazƒ±r.")
